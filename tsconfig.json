{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "ts_out",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "_repository/**/*",
    "_backend/_common/**/*",
    "_backend/home_service/**/*",
    "_backend/plant_service/**/*",
    "_backend/user_service/**/*"
  ]
}